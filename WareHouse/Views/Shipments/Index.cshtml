<section id="shipments">
    <h2>Поставки</h2>
    <p>Список последних поставок товаров.</p>
    <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addShipmentModal">Добавить поставку</button>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>2023-10-27</td>
                    <td>В пути</td>
                    <td>
                        <button class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></button>
                        <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                <!-- Здесь будут данные из БД -->
            </tbody>
        </table>
    </div>
</section>

<div class="modal fade" id="addShipmentModal" tabindex="-1" role="dialog" aria-labelledby="addShipmentModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addShipmentModalLabel">Добавить поставку</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="shipmentDate">Дата поставки</label>
                        <input type="date" class="form-control" id="shipmentDate">
                    </div>
                    <div class="form-group">
                        <label for="shipmentStatus">Статус</label>
                        <select class="form-control" id="shipmentStatus">
                            <option>В пути</option>
                            <option>Получено</option>
                            <option>Обработка</option>
                            <!-- Добавьте статусы из вашей базы данных -->
                        </select>
                    </div>
                    <!-- Добавьте поля для товаров в поставке -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</div>