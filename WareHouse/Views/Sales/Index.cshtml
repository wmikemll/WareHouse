<section id="sales">
    <h2>Продажи</h2>
    <p>Список последних продаж.</p>
    <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addSaleModal">Добавить продажу</button>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Дата</th>
                    <th>Сумма</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>2023-10-27</td>
                    <td>15000</td>
                    <td>
                        <button class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></button>
                        <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                <!-- Здесь будут данные из БД -->
            </tbody>
        </table>
    </div>
