@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <tr>
        <td>
            @product.Name
            <input type="hidden" name="ProductIds" value="@product.Id" />
        </td>
        @if (product.Weight > 0)
        {
            <td>
                <input type="number" class="form-control" name="Quantities[@product.Id]" value="0" step="0.01" min="0.1" max="@product.Weight">
            </td>
        }
        else
        {
            <td>
                <p>Товар закончился</p>
            </td>
        }
    </tr>
}
